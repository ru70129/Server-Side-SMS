@model PagedResult<SubjectViewModel>

@{
    ViewData["Title"] = "Manage Subjects";
}

<h1>Manage Subjects</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-2">
            <select name="sortBy" class="form-control">
                <option value="">Sort By</option>
                <option value="name" selected="@(ViewBag.SortBy == "name")">Name</option>
            </select>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input type="checkbox" name="isActive" value="true" checked="@ViewBag.IsActive" class="form-check-input" id="isActive" />
                <label class="form-check-label" for="isActive">Active Only</label>
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model.Data)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@(subject.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@subject.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalItems > Model.PageSize)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize" asp-route-search="@ViewBag.Search" asp-route-sortBy="@ViewBag.SortBy" asp-route-isActive="@ViewBag.IsActive">@i</a>
                </li>
            }
        </ul>
    </nav>
}