@model SubjectViewModel

@{
    ViewData["Title"] = "Subject Details";
}

<h1>Subject Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
        <p class="card-text"><strong>Created By:</strong> @Model.CreatedBy</p>
        <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToString()</p>
        @if (Model.UpdatedAt.HasValue)
        {
            <p class="card-text"><strong>Updated By:</strong> @Model.UpdatedBy</p>
            <p class="card-text"><strong>Updated At:</strong> @Model.UpdatedAt.Value.ToString()</p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>